<?xml version="1.0" encoding="utf-8"?>
<!-- Settings for Ned's Turkey Farm -->

<settings>

  <!-- general settings -->

  <game name="Karma"/>

  <!-- renderer settings -->

  <renderer width="1024" height="768" shadermodel="5_0"/>

  <!-- image file names -->

  <images>
    <image src="Images\paving.png"/>
    <image src="Images\floor.png"/> 
    <image src="Images\black.png"/>
  </images>
  
  <!-- sprites -->
  
  <sprites>
    <sprite name="demon" file="Images\NewPiskel" ext="png" frames="1" bottomorigin="0"/>
    <sprite name="key" file="Images\key" ext="png" frames="1" bottomorigin="0"/>
    <sprite name="hud1" file="Images\HudFirst" ext="png" frames="1"/>
    <sprite name="hud2" file="Images\HudSecond" ext="png" frames="1"/>
    <sprite name="hud3" file="Images\HudThird" ext="png" frames="1"/>
    <sprite name="hud4" file="Images\HudFourth" ext="png" frames="1"/>
    <sprite name="hud1to2" file="Images\HudTransistionOneToTwo" ext="png" frames="1"/>
    <sprite name="hud2to3" file="Images\HudTransistionTwoToThree" ext="png" frames="1"/>
    <sprite name="hud3to4" file="Images\HudTransistionThreeToFour" ext="png" frames="1"/>
    <sprite name="huddeath" file="Images\HudDeath" ext="png" frames="1"/>
    <sprite name="hudend" file="Images\HudEnd" ext="png" frames="1"/>
    <sprite name="hudstart" file="Images\HudStart" ext="png" frames="1"/>
    <sprite name="instruct" file="Images\instructions" ext="png" frames="1"/>
  </sprites>

  <!-- objects-->

  <objects>
    
    <object name="demon" grounded="1"            
      minxspeed="0" maxxspeed="0" minyspeed="0" maxyspeed="0"
      cycle="1" frameinterval="250" animation="0"/>

    <object name="key" grounded="1"
      minxspeed="0" maxxspeed="0" minyspeed="0" maxyspeed="0"
      cycle="1" frameinterval="250" animation="0"/>

  </objects>

  <!-- instances-->

  <instances>
        <instance typename="demon" name="demon1" position="512,300,4608" />
        <instance typename="demon" name="demon2" position="33280,300,6656" />
        <instance typename="demon" name="demon3" position="18944,300,37376" />
        <instance typename="key" name="key" position="6656,350,36352" />
  </instances>

  <!-- sounds-->

  <sounds>
    <sound file="Sounds\Footsteps.wav"/>
    <sound file="Sounds\GhostNoise2.wav"/>
    <sound file="Sounds\background.wav"/>
    <sound file="Sounds\MetalCrashing.wav"/>
    <sound file="Sounds\KeyNoise.wav"/>
    <sound file="Sounds\chase_music.wav"/>
    <sound file="Sounds\breathing2.wav"/>
    <sound file="Sounds\death.wav"/>
    <sound file="Sounds\creaky.wav"/>
    <sound file="Sounds\keysound.wav"/>
  </sounds>
  
  <!-- debugger settings -->

  <debug linenumber="1" header="1">
    <file select="1" name="debug.txt"/>
    <debugger select="1"/>
    <ip select="1" address="127.0.0.1" port="1617"/>
  </debug>

</settings>
